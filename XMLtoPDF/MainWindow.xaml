<Window x:Class="XMLtoPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLtoPDF"
        mc:Ignorable="d"
        Title="XML to PDF" Height="200" Width="400" MinHeight="200" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        
        <Button Name="ButtonSelect"
				Click="ButtonSelect_Click"
				Margin="10, 5"
                Grid.Row="0">Выбрать файл</Button>
        
        <Button Name="ButtonSave"
                Click="ButtonSave_Click"
                Margin="10, 5"
                Grid.Row="1">Сохранить файл</Button>
        
        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2">
            <TextBlock Margin="0, 0, 5, 0">Выбран файл:</TextBlock>
            <TextBlock Name="textBlockFile"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
